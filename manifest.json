{
  "name": "Namengenerator für Seppo",
  "short_name": "SeppoGen",
  "description": "Ein Fantasy-Namengenerator für Seppos Welt – entdecke epische Namen für Orte, Wesen und Legenden!",
  "lang": "de",
  "start_url": "/seppogen/index.html?source=pwa",
  "scope": "/seppogen/",
  "display": "standalone",
  "orientation": "portrait",
  "background_color": "#ffffff",
  "theme_color": "#3E7D63",
  "icons": [
    {
      "src": "/seppogen/icon-192.png",
      "type": "image/png",
      "sizes": "192x192",
      "purpose": "any"
    },
    {
      "src": "/seppogen/icon-512.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "any"
    },
    {
      "src": "/seppogen/icon-light-192.png",
      "type": "image/png",
      "sizes": "192x192",
      "purpose": "any"
    },
    {
      "src": "/seppogen/icon-light-512.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "any"
    }
  ]
}
cd ~/seppogen
sed -i 's|"/seppogen/index.html?source=pwa"|"/index.html?source=pwa"|g' manifest.json
sed -i 's|"/seppogen/"|"/"|g' manifest.json
sed -i 's|/seppogen/|/|g' sw.js
sed -i 's|/seppogen/manifest.json|/manifest.json|g' index.html
sed -i 's|/seppogen/sw.js|/sw.js|g' index.html
git add .
git commit -m "Updated URLs for GitHub Pages deployment"
git push


